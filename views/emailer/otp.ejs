<% layout("/layouts/boilerplate") -%>
<div class="min-h-screen flex items-center justify-center
            bg-gradient-to-br from-gray-50 to-white
            dark:from-gray-900 dark:via-gray-800 dark:to-gray-900
            px-4 transition-colors duration-300">

  <div class="w-full max-w-md">

    <!-- Card -->
    <div class="bg-white dark:bg-gray-800
                shadow-2xl rounded-2xl p-6 sm:p-8
                border border-gray-200 dark:border-gray-700">

      <!-- Brand -->
      <div class="text-center mb-6">
        <div class="flex justify-center items-center space-x-3 mb-2">
          <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center">
            <span class="text-lg font-bold text-white">RS</span>
          </div>
          <span class="text-2xl font-bold bg-gradient-to-r from-blue-400 to-cyan-300 bg-clip-text text-transparent">
            RootShield
          </span>
        </div>
        <p class="text-sm text-gray-600 dark:text-gray-400">
          Secure Email Verification
        </p>
      </div>

      <!-- Title -->
      <div class="text-center mb-4">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
          Verify Your Email
        </h2>

        <p class="mt-2 text-sm text-gray-600 dark:text-gray-300 leading-relaxed">
          A 6-digit One-Time Password (OTP) has been sent to your registered email address.
        </p>
      </div>

      <!-- OTP Form -->
      <form action="/verify/<%= user._id %>" method="POST" class="space-y-5">

        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1 text-center">
            Enter OTP
          </label>

          <input
            type="text"
            name="otp"
            maxlength="6"
            inputmode="numeric"
            pattern="[0-9]{6}"
            required
            placeholder="● ● ● ● ● ●"
            class="w-full px-4 py-3 text-center text-xl tracking-widest
                   rounded-xl border
                   border-gray-300 dark:border-gray-600
                   bg-white dark:bg-gray-700
                   text-gray-900 dark:text-white
                   focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-cyan-500
                   dark:focus:ring-cyan-400 dark:focus:border-cyan-400
                   transition-all duration-200"
          />
        </div>

        <!-- Verify Button -->
        <button
          type="submit"
          class="w-full py-3 bg-gradient-to-r from-blue-600 to-cyan-500 hover:from-blue-700 hover:to-cyan-600
                 text-white font-semibold rounded-xl
                 shadow-lg hover:shadow-xl transition-all duration-300">
          Verify Email
        </button>

      </form>

      <!-- Divider -->
      <div class="my-6 border-t border-gray-300 dark:border-gray-700"></div>

      <!-- Resend Section -->
      <div class="text-center">
        <p class="text-sm text-gray-700 dark:text-gray-300 mb-3">
          Didn't receive the OTP?
        </p>

        <form
          id="resendForm"
          action="/verify/<%= user._id %>/resend"
          method="POST"
          class="inline-block"
        >
          <button
            id="resendBtn"
            type="submit"
            class="px-4 py-2 rounded-lg
                   bg-gray-200 hover:bg-gray-300
                   dark:bg-gray-700 dark:hover:bg-gray-600
                   text-gray-900 dark:text-white
                   font-medium transition-all duration-200 shadow-sm">
            Resend OTP
          </button>
        </form>

        <p id="timer" class="mt-3 text-xs text-gray-500 dark:text-gray-400"></p>
      </div>

    </div>

    <!-- Trust Footer -->
    <p class="mt-6 text-center text-xs text-gray-500 dark:text-gray-400">
      RootShield uses secure verification to protect your account.
    </p>

  </div>
</div>

<script>
  const resendBtn = document.getElementById("resendBtn");
  const timerEl = document.getElementById("timer");

  if (resendBtn) {
    resendBtn.addEventListener("click", function () {
      setTimeout(startTimer, 300);
    });
  }

  function startTimer() {
    let countdown = 60;
    resendBtn.disabled = true;
    resendBtn.innerText = `Resend OTP (${countdown}s)`;
    timerEl.innerText = "Please wait before requesting a new OTP.";

    const timer = setInterval(() => {
      countdown--;
      resendBtn.innerText = `Resend OTP (${countdown}s)`;

      if (countdown <= 0) {
        clearInterval(timer);
        resendBtn.disabled = false;
        resendBtn.innerText = "Resend OTP";
        timerEl.innerText = "";
      }
    }, 1000);
  }
</script>