<% layout("/layouts/boilerplate") -%>

<!-- Share Modal -->
<div id="shareModal" class="fixed inset-0 z-50 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>
  
  <div class="fixed inset-0 z-10 overflow-y-auto">
    <div class="flex min-h-full items-center justify-center p-4 text-center sm:p-0">
      <div class="relative transform overflow-hidden rounded-2xl bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-md">
        
        <!-- Modal Header -->
        <div class="bg-gradient-to-r from-blue-600 to-indigo-600 px-6 py-4">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-bold text-white" id="modal-title">
              <i class="fas fa-share-alt mr-2"></i> Share This Blog
            </h3>
            <button type="button" onclick="closeShareModal()" class="rounded-md text-white hover:text-gray-200">
              <i class="fas fa-times text-xl"></i>
            </button>
          </div>
        </div>

        <!-- Modal Body -->
        <div class="px-6 py-6">
          <div class="space-y-3">
            <!-- Facebook -->
            <a href="https://www.facebook.com/sharer/sharer.php?u=https:/.online/blogs/<%= blog.id %>" 
               target="_blank"
               class="flex items-center gap-3 bg-[#3b5998] text-white px-4 py-3 rounded-xl hover:bg-[#2d4373] transition-colors">
              <i class="fab fa-facebook-f text-lg w-6 text-center"></i>
              Share on Facebook
            </a>

            <!-- WhatsApp -->
            <a href="https://api.whatsapp.com/send?text=https:/.online/blogs/<%= blog.id %>" 
               target="_blank"
               class="flex items-center gap-3 bg-[#25D366] text-white px-4 py-3 rounded-xl hover:bg-[#128C7E] transition-colors">
              <i class="fab fa-whatsapp text-lg w-6 text-center"></i>
              Share on WhatsApp
            </a>

            <!-- Twitter -->
            <a href="https://twitter.com/intent/tweet?url=https:/.online/blogs/<%= blog.id %>&text=Check%20this%20out!" 
               target="_blank"
               class="flex items-center gap-3 bg-[#1DA1F2] text-white px-4 py-3 rounded-xl hover:bg-[#0c85d0] transition-colors">
              <i class="fab fa-twitter text-lg w-6 text-center"></i>
              Share on Twitter
            </a>

            <!-- LinkedIn -->
            <a href="https://www.linkedin.com/shareArticle?mini=true&url=https:/.online/blogs/<%= blog.id %>" 
               target="_blank"
               class="flex items-center gap-3 bg-[#0077B5] text-white px-4 py-3 rounded-xl hover:bg-[#005582] transition-colors">
              <i class="fab fa-linkedin-in text-lg w-6 text-center"></i>
              Share on LinkedIn
            </a>

            <!-- Copy Link -->
            <button onclick="copyToClipboard()" 
                    id="copyBtn"
                    class="flex items-center gap-3 w-full bg-gradient-to-r from-gray-600 to-gray-700 text-white px-4 py-3 rounded-xl hover:from-gray-700 hover:to-gray-800 transition-all duration-300">
              <i class="far fa-copy text-lg w-6 text-center"></i>
              Copy Link
            </button>
          </div>

          <!-- Current URL -->
          <div class="mt-6 p-3 bg-gray-50 rounded-xl border border-gray-200">
            <p class="text-xs text-gray-600 mb-1">Share this URL:</p>
            <div class="flex items-center gap-2">
              <input type="text" 
                     id="shareUrl" 
                     value="https://rootshield.in/blogs/<%= blog.id %>" 
                     readonly
                     class="flex-1 text-sm text-gray-700 bg-transparent border-none focus:outline-none">
              <button onclick="copyToClipboard()" class="text-gray-500 hover:text-blue-600">
                <i class="far fa-copy"></i>
              </button>
            </div>
          </div>
        </div>

        <!-- Modal Footer -->
        <div class="bg-gray-50 px-6 py-4 rounded-b-2xl">
          <button type="button" 
                  onclick="closeShareModal()" 
                  class="w-full bg-gray-200 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-300 transition-colors">
            Close
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal<%= blog._id %>" class="fixed inset-0 z-50 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>
  
  <div class="fixed inset-0 z-10 overflow-y-auto">
    <div class="flex min-h-full items-center justify-center p-4 text-center sm:p-0">
      <div class="relative transform overflow-hidden rounded-2xl bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-md">
        
        <!-- Modal Header -->
        <div class="bg-gradient-to-r from-red-500 to-red-600 px-6 py-4">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-bold text-white" id="modal-title">
              <i class="fas fa-exclamation-triangle mr-2"></i> Confirm Deletion
            </h3>
            <button type="button" onclick="closeDeleteModal()" class="rounded-md text-white hover:text-gray-200">
              <i class="fas fa-times text-xl"></i>
            </button>
          </div>
        </div>

        <!-- Modal Body -->
        <div class="px-6 py-6">
          <div class="mx-auto flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-red-100">
            <i class="fas fa-trash-alt text-red-600 text-xl"></i>
          </div>
          <div class="mt-3 text-center">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">
              Delete "<%= blog.title %>"?
            </h3>
            <p class="text-sm text-gray-500">
              This action cannot be undone. The blog will be permanently deleted.
            </p>
          </div>
        </div>

        <!-- Modal Footer -->
        <div class="bg-gray-50 px-6 py-4 flex justify-end space-x-3 rounded-b-2xl">
          <button type="button" 
                  onclick="closeDeleteModal()" 
                  class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors">
            Cancel
          </button>
          <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
            <button type="submit" 
                    class="px-4 py-2 bg-gradient-to-r from-red-500 to-red-600 text-white rounded-lg hover:from-red-600 hover:to-red-700 transition-colors">
              Yes, Delete
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<% if(blog){ %>
  <% if(currUser && !blog.usersSeen.includes(currUser._id) && !currUser._id.equals(blog.author._id)){ %>
    <% blog.usersSeen.push(currUser._id); %>
    <% blog.save().catch(err => console.error('Error saving blog views:', err)); %>
  <% } %>

<div class="min-h-screen bg-gradient-to-b from-gray-50 to-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Blog Header -->
    <div class="max-w-4xl mx-auto">
      <!-- Alert for blocked blog -->
      <% if(blog.blocked){ %>
        <div class="mb-6 bg-gradient-to-r from-red-50 to-red-100 border border-red-200 rounded-2xl p-6 shadow-sm">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <i class="fas fa-ban text-red-600 text-2xl"></i>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-semibold text-red-800">Blog Blocked</h3>
              <p class="text-red-700 mt-1">
                This blog has been <strong>blocked by admin</strong> and may not be visible to regular users.
              </p>
            </div>
          </div>
        </div>
      <% } %>

      <% if(!blog.blocked){ %>
        <!-- Category & Metadata -->
        <div class="flex flex-wrap items-center justify-between gap-4 mb-8">
          <div class="flex items-center gap-3">
            <span class="px-4 py-1.5 bg-gradient-to-r from-blue-500 to-indigo-600 text-white text-sm font-semibold rounded-full shadow-sm">
              <%= blog.category %>
            </span>
            
            <!-- Author Info -->
            <div class="flex items-center text-gray-600 text-sm">
              <div class="w-8 h-8 rounded-full bg-gradient-to-r from-blue-400 to-purple-500 flex items-center justify-center text-white font-medium mr-2">
                <% if (blog.author) { %>
                  <%= (blog.author.name || blog.author.username || 'U').charAt(0).toUpperCase() %>
                <% } else { %>
                  <i class="fas fa-user"></i>
                <% } %>
              </div>
              <div>
                <% if (blog.author) { %>
                  <span class="font-medium text-gray-800">
                    <%= blog.author.name || blog.author.username || "Unnamed User" %>
                  </span>
                <% } else { %>
                  <span class="italic text-gray-500">Deleted User</span>
                <% } %>
                <div class="text-xs text-gray-500 mt-0.5">
                  <i class="far fa-clock mr-1"></i>
                  <% if(!blog.updatedAt){ %>
                    <%= new Date(blog.createdAt).toLocaleDateString('en-IN', {
                      timeZone: 'Asia/Kolkata', 
                      year: 'numeric', 
                      month: 'short', 
                      day: 'numeric'
                    }) %>
                  <% } else { %>
                    <%= new Date(blog.updatedAt).toLocaleDateString('en-IN', {
                      timeZone: 'Asia/Kolkata', 
                      year: 'numeric', 
                      month: 'short', 
                      day: 'numeric'
                    }) %>
                  <% } %>
                </div>
              </div>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="flex items-center gap-2">
            <!-- Share Button -->
            <button onclick="openShareModal()" 
                    class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-blue-50 to-blue-100 text-blue-700 border border-blue-200 rounded-xl hover:from-blue-100 hover:to-blue-200 hover:border-blue-300 transition-all duration-300">
              <i class="fas fa-share-alt"></i>
              <span class="hidden sm:inline">Share</span>
            </button>

            <!-- Download Button -->
            
          </div>
        </div>

        <!-- Blog Title -->
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-8 leading-tight">
          <%= blog.title %>
        </h1>

        <!-- Featured Image -->
        <% if(blog.image && blog.image.url){ %>
          <div class="mb-10 rounded-2xl overflow-hidden shadow-xl border border-gray-200">
            <img 
              src="<%= blog.image.url %>" 
              alt="<%= blog.imageTitle || 'Blog Image' %>" 
              class="w-full h-auto max-h-[500px] object-cover"
              loading="lazy"
              onerror="this.onerror=null; this.src='/images/default-blog.jpg';"
            >
            <% if(blog.imageTitle){ %>
              <div class="bg-gray-900/60 text-white text-sm p-3 text-center">
                <%= blog.imageTitle %>
              </div>
            <% } %>
          </div>
        <% } %>

        <!-- Blog Content -->
        <article class="prose prose-lg max-w-none mb-12">
          <div class="bg-white rounded-2xl p-6 sm:p-8 shadow-sm border border-gray-100">
            <% 
              const hasHTML = /<\/?[a-z][\s\S]*>/i.test(blog.content);
            %>
            <% if (hasHTML) { %>
              <div class="text-gray-800 leading-relaxed space-y-4">
                <%- blog.content %>
              </div>
            <% } else { %>
              <div class="text-gray-800 leading-relaxed whitespace-pre-line space-y-4">
                <%- blog.content.replace(/\n/g, '<br>') %>
              </div>
            <% } %>
          </div>
        </article>

        <!-- Author Actions -->
        <% if(currUser && currUser._id.equals(blog.author._id)){ %>
          <div class="flex flex-wrap gap-3 mb-8 p-6 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-2xl border border-blue-100">
            <div class="flex-1">
              <h4 class="font-semibold text-gray-800 mb-1">Blog Owner Controls</h4>
              <p class="text-sm text-gray-600">Manage your blog post</p>
            </div>
            <div class="flex gap-3">
              <a href="/blogs/<%= blog._id %>/edit" 
                 class="inline-flex items-center gap-2 px-5 py-2.5 bg-white border border-blue-300 text-blue-700 rounded-xl hover:bg-blue-50 transition-colors shadow-sm">
                <i class="fas fa-edit"></i>
                Edit
              </a>
              <button type="button" 
                      onclick="openDeleteModal()"
                      class="inline-flex items-center gap-2 px-5 py-2.5 bg-gradient-to-r from-red-500 to-red-600 text-white rounded-xl hover:from-red-600 hover:to-red-700 transition-colors shadow-sm">
                <i class="fas fa-trash-alt"></i>
                Delete
              </button>
            </div>
          </div>
        <% } %>

        <!-- Comments Section -->
        <div class="space-y-10">
          <!-- Comment Form -->
          <% if(currUser){ %>
            <div class="bg-white rounded-2xl shadow-lg p-6 sm:p-8 border border-gray-100">
              <h3 class="text-2xl font-bold text-gray-900 mb-6">Leave a Comment</h3>
              <form action="/blogs/<%= blog._id %>/comments" method="POST" class="space-y-4">
                <div>
                  <textarea 
                    name="text" 
                    rows="4" 
                    class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                    placeholder="Share your thoughts, insights, or feedback..."
                    required
                  ></textarea>
                </div>
                <button type="submit" 
                        class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-blue-600 to-indigo-600 text-white font-medium rounded-xl hover:from-blue-700 hover:to-indigo-700 transition-all duration-300 shadow-lg hover:shadow-xl">
                  <i class="fas fa-paper-plane"></i>
                  Post Comment
                </button>
              </form>
            </div>
          <% } else { %>
            <div class="bg-gradient-to-r from-yellow-50 to-amber-50 border border-yellow-200 rounded-2xl p-6">
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <i class="fas fa-comment-alt text-yellow-600 text-2xl"></i>
                </div>
                <div class="ml-4">
                  <h3 class="text-lg font-semibold text-yellow-800">Join the Conversation</h3>
                  <p class="text-yellow-700 mt-1">
                    Please <a href="/login" class="font-medium text-blue-600 hover:text-blue-800">log in</a> or 
                    <a href="/signup" class="font-medium text-blue-600 hover:text-blue-800">create an account</a> 
                    to leave a comment and engage with the community.
                  </p>
                </div>
              </div>
            </div>
          <% } %>

          <!-- Comments List -->
          <div class="bg-white rounded-2xl shadow-lg p-6 sm:p-8 border border-gray-100">
            <div class="flex items-center justify-between mb-8">
              <h3 class="text-2xl font-bold text-gray-900">
                <i class="far fa-comments text-blue-600 mr-2"></i>
                Comments (<%= blog.comments.length %>)
              </h3>
              <% if (blog.comments.length > 0) { %>
                <span class="text-sm text-gray-500">
                  Sorted by: <span class="font-medium text-gray-700">Newest</span>
                </span>
              <% } %>
            </div>

            <% if (blog.comments.length === 0) { %>
              <div class="text-center py-12">
                <div class="inline-block p-6 bg-gray-100 rounded-2xl mb-4">
                  <i class="fas fa-comment-slash text-4xl text-gray-400"></i>
                </div>
                <h4 class="text-xl font-semibold text-gray-700 mb-2">No comments yet</h4>
                <p class="text-gray-600 max-w-md mx-auto">
                  Be the first to share your thoughts and start the discussion.
                </p>
              </div>
            <% } else { %>
              <div class="space-y-6">
                <% comments.forEach(comment => { %>
                  <div class="group p-6 bg-gray-50 rounded-2xl hover:bg-white border border-gray-100 hover:border-blue-200 transition-all duration-300">
                    <div class="flex items-start justify-between mb-4">
                      <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-full bg-gradient-to-r from-blue-400 to-purple-500 flex items-center justify-center text-white font-medium">
                          <% if (comment.user) { %>
                            <%= (comment.user.name || comment.user.username || 'U').charAt(0).toUpperCase() %>
                          <% } else { %>
                            <i class="fas fa-user"></i>
                          <% } %>
                        </div>
                        <div>
                          <h5 class="font-semibold text-gray-800">
                            <% if (comment.user) { %>
                              <%= comment.user.name || comment.user.username || "Unnamed User" %>
                            <% } else { %>
                              <span class="italic text-gray-500">Deleted User</span>
                            <% } %>
                          </h5>
                          <div class="flex items-center text-sm text-gray-500">
                            <i class="far fa-clock mr-1"></i>
                            <%= new Date(comment.createdAt).toLocaleString('en-IN', { 
                              timeZone: 'Asia/Kolkata',
                              dateStyle: 'medium',
                              timeStyle: 'short'
                            }) %>
                          </div>
                        </div>
                      </div>
                      
                      <% if(currUser && comment.user && currUser._id.equals(comment.user._id)){ %>
                        <form action="/blogs/<%= blog._id %>/comments/<%= comment._id %>?_method=DELETE" 
                              method="POST"
                              onsubmit="return confirm('Are you sure you want to delete this comment?');">
                          <button type="submit" 
                                  class="text-red-500 hover:text-red-700 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                            <i class="fas fa-trash-alt"></i>
                          </button>
                        </form>
                      <% } %>
                    </div>
                    
                    <div class="text-gray-700 leading-relaxed whitespace-pre-line">
                      <%- comment.text.replace(/\n/g, '<br>') %>
                    </div>
                  </div>
                <% }) %>
              </div>
            <% } %>
          </div>
        </div>

        <!-- Related Blogs -->
        <% if (relatedBlogs && relatedBlogs.length > 0) { %>
          <div class="mt-16">
            <div class="flex items-center justify-between mb-8">
              <div>
                <h3 class="text-2xl font-bold text-gray-900 mb-2">
                  More in "<%= blog.category %>"
                </h3>
                <p class="text-gray-600">
                  Explore related blogs in this category
                </p>
              </div>
              <a href="/blogs?category=<%= blog.category %>" 
                 class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-800 font-medium">
                View All
                <i class="fas fa-arrow-right"></i>
              </a>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
              <% relatedBlogs.forEach(relatedBlog => { %>
                <div class="group bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-100 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                  <div class="flex flex-col md:flex-row">
                    <!-- Image -->
                    <div class="md:w-2/5">
                      <img 
                        src="<%= (relatedBlog.image && relatedBlog.image.url) ? relatedBlog.image.url : '/images/default-blog.jpg' %>"
                        alt="<%= relatedBlog.title %>"
                        class="w-full h-48 md:h-full object-cover group-hover:scale-105 transition-transform duration-500"
                        loading="lazy"
                      >
                    </div>
                    
                    <!-- Content -->
                    <div class="md:w-3/5 p-6 flex flex-col">
                      <div class="flex-1">
                        <span class="inline-block px-3 py-1 bg-blue-50 text-blue-600 text-xs font-semibold rounded-full mb-3">
                          <%= relatedBlog.category %>
                        </span>
                        <h4 class="text-lg font-bold text-gray-800 mb-3 line-clamp-2 group-hover:text-blue-600 transition-colors">
                          <a href="/blogs/<%= relatedBlog.id && relatedBlog.id.trim() !== '' ? relatedBlog.id : relatedBlog._id %>">
                            <%= relatedBlog.title %>
                          </a>
                        </h4>
                        <p class="text-gray-600 text-sm mb-4 line-clamp-2">
                          <%= relatedBlog.shortdescription && relatedBlog.shortdescription.length > 120 
                              ? relatedBlog.shortdescription.substring(0, 120) + '...' 
                              : relatedBlog.shortdescription || 'No description available.' %>
                        </p>
                      </div>
                      
                      <div class="flex items-center justify-between pt-4 border-t border-gray-100">
                        <div class="flex items-center text-sm text-gray-600">
                          <div class="w-6 h-6 rounded-full bg-gray-200 flex items-center justify-center text-gray-500 text-xs mr-2">
                            <% if (relatedBlog.author) { %>
                              <%= (relatedBlog.author.name || relatedBlog.author.username || 'A').charAt(0).toUpperCase() %>
                            <% } else { %>
                              <i class="fas fa-user"></i>
                            <% } %>
                          </div>
                          <span class="text-gray-700">
                            <%= relatedBlog.author?.name || relatedBlog.author?.username || 'Unknown Author' %>
                          </span>
                        </div>
                        
                        <a href="/blogs/<%= relatedBlog.id && relatedBlog.id.trim() !== '' ? relatedBlog.id : relatedBlog._id %>" 
                           class="text-sm font-medium text-blue-600 hover:text-blue-800 flex items-center gap-1">
                          Read
                          <i class="fas fa-arrow-right text-xs"></i>
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
              <% }) %>
            </div>
          </div>
        <% } %>
      <% } %>
    </div>
  </div>
</div>
<% } else { %>
  <!-- Blog Not Found -->
  <div class="min-h-screen flex items-center justify-center bg-gradient-to-b from-gray-50 to-white">
    <div class="text-center px-4">
      <div class="inline-block p-6 bg-gradient-to-r from-red-100 to-red-50 rounded-2xl mb-6">
        <i class="fas fa-exclamation-triangle text-5xl text-red-500"></i>
      </div>
      <h1 class="text-3xl font-bold text-gray-900 mb-4">Blog Not Found</h1>
      <p class="text-gray-600 max-w-md mx-auto mb-8">
        The blog you are looking for does not exist or has been deleted.
      </p>
      <a href="/blogs" 
         class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-blue-600 to-indigo-600 text-white font-medium rounded-xl hover:from-blue-700 hover:to-indigo-700 transition-all duration-300">
        <i class="fas fa-arrow-left mr-2"></i>
        Back to Blogs
      </a>
    </div>
  </div>
<% } %>


<!-- JavaScript -->
<script>
// Share Modal Functions
function openShareModal() {
  document.getElementById('shareModal').classList.remove('hidden');
  document.body.style.overflow = 'hidden';
}

function closeShareModal() {
  document.getElementById('shareModal').classList.add('hidden');
  document.body.style.overflow = 'auto';
}

// Delete Modal Functions
function openDeleteModal() {
  document.getElementById('deleteModal<%= blog._id %>').classList.remove('hidden');
  document.body.style.overflow = 'hidden';
}

function closeDeleteModal() {
  document.getElementById('deleteModal<%= blog._id %>').classList.add('hidden');
  document.body.style.overflow = 'auto';
}

// Copy to Clipboard
function copyToClipboard() {
  const url = document.getElementById('shareUrl').value;
  const copyBtn = document.getElementById('copyBtn');
  
  navigator.clipboard.writeText(url).then(() => {
    // Update button text and icon
    const originalHTML = copyBtn.innerHTML;
    copyBtn.innerHTML = '<i class="fas fa-check text-lg w-6 text-center"></i> Copied!';
    copyBtn.classList.remove('from-gray-600', 'to-gray-700', 'hover:from-gray-700', 'hover:to-gray-800');
    copyBtn.classList.add('from-green-500', 'to-green-600', 'hover:from-green-600', 'hover:to-green-700');
    
    // Revert after 2 seconds
    setTimeout(() => {
      copyBtn.innerHTML = originalHTML;
      copyBtn.classList.remove('from-green-500', 'to-green-600', 'hover:from-green-600', 'hover:to-green-700');
      copyBtn.classList.add('from-gray-600', 'to-gray-700', 'hover:from-gray-700', 'hover:to-gray-800');
    }, 2000);
  }).catch(err => {
    console.error('Failed to copy: ', err);
    alert('Failed to copy link to clipboard');
  });
}

// Close modals on Escape key
document.addEventListener('keydown', (e) => {
  if (e.key === 'Escape') {
    closeShareModal();
    closeDeleteModal();
  }
});

// Close modals when clicking outside
document.addEventListener('click', (e) => {
  const shareModal = document.getElementById('shareModal');
  const deleteModal = document.getElementById('deleteModal<%= blog._id %>');
  
  if (shareModal && !shareModal.classList.contains('hidden') && e.target === shareModal) {
    closeShareModal();
  }
  
  if (deleteModal && !deleteModal.classList.contains('hidden') && e.target === deleteModal) {
    closeDeleteModal();
  }
});

// Prevent multiple form submissions
document.querySelectorAll('form').forEach(form => {
  form.addEventListener('submit', function(e) {
    const submitBtn = this.querySelector('button[type="submit"]');
    if (submitBtn && submitBtn.classList.contains('submitting')) {
      e.preventDefault();
      return;
    }
    
    if (submitBtn) {
      submitBtn.classList.add('submitting');
      submitBtn.disabled = true;
      submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> Processing...';
    }
  });
});
