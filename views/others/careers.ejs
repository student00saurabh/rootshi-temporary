<script>
// Filter functionality
function setupFilters() {
    const checkboxes = document.querySelectorAll('input[type="checkbox"]');
    
    checkboxes.forEach(checkbox => {
        checkbox.addEventListener('change', filterJobs);
    });
}

function filterJobs() {
    const experienceFilters = Array.from(document.querySelectorAll('input[id^="filter-"]:checked'))
        .map(cb => cb.id.replace('filter-', ''));
    
    const jobCards = document.querySelectorAll('.job-card');
    let visibleCount = 0;
    
    jobCards.forEach(card => {
        const level = card.dataset.level;
        const position = card.dataset.position;
        
        const showByExperience = experienceFilters.includes(level) || experienceFilters.length === 0;
        const showByPosition = experienceFilters.includes(position) || 
                               !['intern', 'fresher'].includes(experienceFilters[0]);
        
        const shouldShow = showByExperience && showByPosition;
        
        card.style.display = shouldShow ? 'block' : 'none';
        if (shouldShow) visibleCount++;
    });
    
    // Update count
    const countElement = document.querySelector('h2 span');
    if (countElement) {
        countElement.textContent = `(${visibleCount})`;
    }
}

function clearFilters() {
    document.querySelectorAll('input[type="checkbox"]').forEach(cb => {
        if (cb.id.includes('intern') || cb.id.includes('frontend') || cb.id.includes('backend') || cb.id.includes('fullstack')) {
            cb.checked = true;
        } else {
            cb.checked = false;
        }
    });
    filterJobs();
}

// Initialize filters on page load
document.addEventListener('DOMContentLoaded', () => {
    setupFilters();
    filterJobs();
});
</script>