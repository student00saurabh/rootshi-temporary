<% layout("layouts/boilerplate") %>

<!-- Course Detail Page -->
<div class="bg-gray-50 dark:bg-gray-900 min-h-screen py-8 transition-colors duration-200">
  <div class="container mx-auto px-4">
    
    <!-- Breadcrumb -->
    <nav class="flex mb-6 text-sm" aria-label="Breadcrumb">
      <ol class="inline-flex items-center space-x-1 md:space-x-3">
        <li class="inline-flex items-center">
          <a href="/" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">Home</a>
        </li>
        <li>
          <div class="flex items-center">
            <i class="fas fa-chevron-right text-gray-400 dark:text-gray-600 mx-2 text-xs"></i>
            <a href="/courses" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">Courses</a>
          </div>
        </li>
        <li>
          <div class="flex items-center">
            <i class="fas fa-chevron-right text-gray-400 dark:text-gray-600 mx-2 text-xs"></i>
            <span class="text-gray-500 dark:text-gray-500"><%= course.courceType %></span>
          </div>
        </li>
        
      </ol>
    </nav>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      
      <!-- Left Column - Course Details (2/3 width) -->
      <div class="lg:col-span-2 space-y-6">
        
        <!-- Course Header Card -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md dark:shadow-gray-900/30 overflow-hidden transition-colors duration-200">
          <!-- Course Image -->
          <% if(course.image && course.image.url) { %>
          <div class=" overflow-hidden">
            <img src="<%= course.image.url %>" alt="<%= course.title %>" 
                 class="w-full h-full object-cover">
          </div>
          <% } %>
          
          <div class="p-6">
            <!-- Title and Badges -->
            <div class="flex flex-wrap items-center gap-3 mb-4">
              <h1 class="text-3xl font-bold text-gray-800 dark:text-white"><%= course.title %></h1>
              <% if(course.isPopular) { %>
                <span class="px-3 py-1 bg-yellow-100 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-400 text-xs font-semibold rounded-full">Popular</span>
              <% } %>
              <% if(!course.isActive) { %>
                <span class="px-3 py-1 bg-red-100 dark:bg-red-900/30 text-red-800 dark:text-red-400 text-xs font-semibold rounded-full">Inactive</span>
              <% } %>
            </div>

            <!-- Short Description -->
            <p class="text-lg text-gray-600 dark:text-gray-300 mb-6"><%= course.shortDescription %></p>

            <!-- Meta Information -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
              <div class="bg-gray-50 dark:bg-gray-700/50 p-3 rounded-lg">
                <p class="text-sm text-gray-500 dark:text-gray-400">Category</p>
                <p class="font-semibold text-gray-800 dark:text-white"><%= course.courceType %></p>
              </div>
              <div class="bg-gray-50 dark:bg-gray-700/50 p-3 rounded-lg">
                <p class="text-sm text-gray-500 dark:text-gray-400">Duration</p>
                <p class="font-semibold text-gray-800 dark:text-white"><%= course.duration || 'Self-paced' %> hrs</p>
              </div>
              <div class="bg-gray-50 dark:bg-gray-700/50 p-3 rounded-lg">
                <p class="text-sm text-gray-500 dark:text-gray-400">Students</p>
                <p class="font-semibold text-gray-800 dark:text-white"><%= totalStudents %> enrolled</p>
              </div>
              <div class="bg-gray-50 dark:bg-gray-700/50 p-3 rounded-lg">
                <p class="text-sm text-gray-500 dark:text-gray-400">Launched</p>
                <p class="font-semibold text-gray-800 dark:text-white">
                  <%= course.lounchedDate ? new Date(course.lounchedDate).toLocaleDateString() : 'Coming soon' %>
                </p>
              </div>
            </div>

            <!-- Teacher Information -->
            <% if(course.teacher) { %>
            <div class="flex items-center p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg mb-6">
              <div class="w-16 h-16 rounded-full bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-white font-bold text-xl">
                <%= currUser.name ? currUser.name.charAt(0).toUpperCase() : 'A' %>
              </div>
              <div class="ml-4">
                <p class="text-sm text-gray-500 dark:text-gray-400">Course Instructor</p>
                <p class="text-xl font-semibold text-gray-800 dark:text-white"><%= course.teacher.name %></p>
                <p class="text-sm text-gray-600 dark:text-gray-300"><%= course.teacher.email %></p>
              </div>
            </div>
            <% } %>

            <!-- Course Description (HTML content) -->
            <% if(course.discription) { %>
            <div class="prose prose-lg max-w-none dark:prose-invert">
              <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">About This Course</h2>
              <div class="course-description dark:prose-invert">
                <!-- This will render HTML content safely -->
                <%- course.discription %>
              </div>
            </div>
            <% } %>

            <!-- Table of Contents -->
            <% if(course.tableOfContent && course.tableOfContent.length > 0) { %>
            <div class="mt-8">
              <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">Course Content</h2>
              <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-4">
                <% course.tableOfContent.forEach((item, index) => { %>
                <div class="flex items-center justify-between py-3 border-b border-gray-200 dark:border-gray-700 last:border-0">
                  <div class="flex items-center">
                    <span class="w-8 h-8 bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 rounded-full flex items-center justify-center mr-3">
                      <%= index + 1 %>
                    </span>
                    <span class="text-gray-800 dark:text-gray-200"><%= item.tile %></span>
                  </div>
                  <% if(item.duration) { %>
                  <span class="text-sm text-gray-500 dark:text-gray-400"><%= item.duration %> mins</span>
                  <% } %>
                </div>
                <% }) %>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Right Column - Enrollment Card (1/3 width) -->
      <div class="lg:col-span-1">
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md dark:shadow-gray-900/30 p-6 sticky top-4 transition-colors duration-200">
          
          <!-- Price -->
          <div class="mb-6">
            <p class="text-3xl font-bold text-gray-800 dark:text-white">₹<%= course.actualPrice %></p>
            <% if(course.actualPrice > course.price) { %>
            <p class="text-sm text-gray-500 dark:text-gray-400 line-through">₹<%= course.actualPrice %></p>
            <p class="text-sm text-green-600 dark:text-green-400">Save ₹<%= course.actualPrice - course.price %></p>
            <% } %>
          </div>

          <!-- Enrollment Status -->
          <% if(isEnrolled) { %>
            <div class="mb-6 p-4 bg-green-50 dark:bg-green-900/20 rounded-lg">
              <p class="text-green-800 dark:text-green-400 font-semibold flex items-center">
                <i class="fas fa-check-circle mr-2"></i> You are enrolled in this course
              </p>
              <p class="text-sm text-green-600 dark:text-green-500 mt-1">
                Enrolled on: <%= new Date(userEnrollment.enrolledAt).toLocaleDateString() %>
              </p>
            </div>
            
            <a href="https://wa.me/91<%= course.teacher.phone %>?text=Hello%20<%= course.teacher.name %>,%20I%20have%20enrolled%20in%20the%20course%20<%= course.title %>.%20I%20would%20like%20to%20connect%20with%20you. %>" 
               class="block w-full text-center px-4 py-3 bg-blue-600 hover:bg-blue-700 dark:bg-blue-600 dark:hover:bg-blue-700 text-white font-semibold rounded-lg transition duration-150 mb-3">
              <i class="fas fa-play-circle mr-2"></i> Connect With Your Teacher
            </a>
            
          <% } else { %>
            
            <% if(currentUser) { %>
              <!-- <form action="/enroll/<%= course._id %>/enroll" method="POST"> -->
                <a href="/enroll"> 
                <button type="submit" 
                        class="w-full px-4 py-3 bg-blue-600 hover:bg-blue-700 dark:bg-blue-600 dark:hover:bg-blue-700 text-white font-semibold rounded-lg transition duration-150 mb-3"
                        <%= !course.isActive ? 'disabled' : '' %>>
                  <i class="fas fa-shopping-cart mr-2"></i> Enroll Now
                </button>
                </a>
              <!-- </form> -->
            <% } else { %>
              <a href="/login?redirect=/courses/<%= course._id %>" 
                 class="block w-full text-center px-4 py-3 bg-blue-600 hover:bg-blue-700 dark:bg-blue-600 dark:hover:bg-blue-700 text-white font-semibold rounded-lg transition duration-150 mb-3">
                <i class="fas fa-sign-in-alt mr-2"></i> Login to Enroll
              </a>
            <% } %>
            
          <% } %>

          <!-- Course Includes -->
          <div class="mt-6">
            <h3 class="font-semibold text-gray-800 dark:text-white mb-3">This course includes:</h3>
            <ul class="space-y-2 text-sm text-gray-600 dark:text-gray-300">
              <li class="flex items-center">
                <i class="fas fa-video text-blue-500 dark:text-blue-400 w-5"></i>
                <span>Full lifetime access</span>
              </li>
              <li class="flex items-center">
                <i class="fas fa-mobile-alt text-blue-500 dark:text-blue-400 w-5"></i>
                <span>Access on mobile and TV</span>
              </li>
              <li class="flex items-center">
                <i class="fas fa-certificate text-blue-500 dark:text-blue-400 w-5"></i>
                <span>Certificate of completion</span>
              </li>
              <li class="flex items-center">
                <i class="fas fa-infinity text-blue-500 dark:text-blue-400 w-5"></i>
                <span>Self-paced learning</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Related Courses Section -->
    <% if(relatedCourses && relatedCourses.length > 0) { %>
    <div class="mt-12">
      <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-6">Related Courses</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <% relatedCourses.forEach(related => { %>
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md dark:shadow-gray-900/30 overflow-hidden hover:shadow-lg dark:hover:shadow-gray-900/50 transition duration-150">
          <% if(related.image && related.image.url) { %>
          <a href="/courses/<%= related._id %>">
            <img src="<%= related.image.url %>" alt="<%= related.title %>" 
                 class="w-full h-40 object-cover">
          </a>
          <% } %>
          <div class="p-4">
            <h3 class="font-semibold text-gray-800 dark:text-white mb-2">
              <a href="/courses/<%= related._id %>" class="hover:text-blue-600 dark:hover:text-blue-400"><%= related.title %></a>
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-300 mb-2"><%= related.shortDescription.substring(0, 60) %>...</p>
            <div class="flex justify-between items-center">
              <span class="text-lg font-bold text-blue-600 dark:text-blue-400">₹<%= related.price %></span>
              <span class="text-xs text-gray-500 dark:text-gray-400"><%= related.courceType %></span>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <% } %>
  </div>
</div>

<!-- Custom CSS for HTML content styling -->
<style>
  .course-description {
    @apply text-gray-700 dark:text-gray-300 leading-relaxed;
  }
  
  .course-description h1 {
    @apply text-3xl font-bold text-gray-800 dark:text-white mt-6 mb-4;
  }
  
  .course-description h2 {
    @apply text-2xl font-semibold text-gray-800 dark:text-white mt-5 mb-3;
  }
  
  .course-description h3 {
    @apply text-xl font-semibold text-gray-800 dark:text-white mt-4 mb-2;
  }
  
  .course-description p {
    @apply mb-4;
  }
  
  .course-description ul {
    @apply list-disc pl-6 mb-4;
  }
  
  .course-description ol {
    @apply list-decimal pl-6 mb-4;
  }
  
  .course-description li {
    @apply mb-1;
  }
  
  .course-description blockquote {
    @apply border-l-4 border-blue-500 bg-blue-50 dark:bg-blue-900/20 dark:border-blue-400 pl-4 py-2 italic my-4 dark:text-gray-300;
  }
  
  .course-description code {
    @apply bg-gray-100 dark:bg-gray-700 text-pink-600 dark:text-pink-400 px-1 py-0.5 rounded text-sm;
  }
  
  .course-description pre {
    @apply bg-gray-800 dark:bg-gray-900 text-white p-4 rounded-lg overflow-x-auto my-4;
  }
  
  .course-description pre code {
    @apply bg-transparent text-white text-sm;
  }
  
  .course-description img {
    @apply rounded-lg max-w-full h-auto my-4;
  }
  
  .course-description table {
    @apply min-w-full divide-y divide-gray-200 dark:divide-gray-700 my-4;
  }
  
  .course-description th {
    @apply bg-gray-50 dark:bg-gray-800 px-4 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase;
  }
  
  .course-description td {
    @apply px-4 py-2 text-sm text-gray-700 dark:text-gray-300 border-b border-gray-200 dark:border-gray-700;
  }
  
  .course-description a {
    @apply text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 underline;
  }
  
  .course-description strong {
    @apply font-semibold text-gray-900 dark:text-white;
  }
  
  /* Dark mode specific adjustments for prose */
  .dark .course-description {
    color: #d1d5db;
  }
  
  .dark .course-description h1,
  .dark .course-description h2,
  .dark .course-description h3,
  .dark .course-description strong {
    color: #ffffff;
  }
  
  /* Ensure images have proper contrast in dark mode */
  .dark .course-description img {
    filter: brightness(0.9);
  }
  
  /* Style horizontal rules */
  .course-description hr {
    @apply my-6 border-gray-200 dark:border-gray-700;
  }
</style>