        image: "https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=400&h=300&fit=crop&auto=format",
        alt: "CompTIA Security+"
    },
    {
        id: 5,
        title: "CKA",
        issuer: "CNCF",
        difficulty: "Intermediate",
        duration: "8–10 Weeks",
        difficultyColor: "bg-yellow-50 text-yellow-700",
        image: "https://images.unsplash.com/photo-1620712943543-bcc4688e7485?w=400&h=300&fit=crop&auto=format",
        alt: "Certified Kubernetes Administrator"
    },
    {
        id: 6,
        title: "OSCP",
        issuer: "Offensive Security",
        difficulty: "Advanced",
        duration: "16–20 Weeks",
        difficultyColor: "bg-red-50 text-red-700",
        image: "https://images.unsplash.com/photo-1555949963-aa79dcee981c?w=400&h=300&fit=crop&auto=format",
        alt: "Offensive Security Certified Professional"
    }
];

// DOM elements
const carousel = document.getElementById("carousel");
const prevBtn = document.getElementById("prevBtn");
const nextBtn = document.getElementById("nextBtn");
const progressDots = document.getElementById("progressDots");

// State variables
let currentIndex = 0;
let cardWidth = 0;
let isTransitioning = false;
let autoScrollInterval;
let totalCards = certifications.length;

// Initialize carousel
function initCarousel() {
    // Clear existing content
    carousel.innerHTML = '';
    progressDots.innerHTML = '';
    
    // Calculate card width based on viewport
    updateCardWidth();
    
    // Create and append certification cards
    certifications.forEach((cert, index) => {
        // Card container
        const card = document.createElement('div');
        card.className = 'flex-shrink-0 px-3 transition-all duration-300 hover:scale-[1.02]';
        card.style.width = `${cardWidth}px`;
        
        // Card content
        card.innerHTML = `
            <div class="bg-white rounded-2xl shadow-md hover:shadow-xl transition-all duration-300 h-full p-6 text-center flex flex-col">
                <div class="h-40 mb-4 overflow-hidden rounded-lg">
                    <img src="${cert.image}" alt="${cert.alt}" 
                         class="w-full h-full object-cover transition-transform duration-500 hover:scale-105" />
                </div>
                <h3 class="font-bold text-xl text-gray-800 mb-1">${cert.title}</h3>
                <p class="text-blue-600 text-sm mb-4 font-medium">${cert.issuer}</p>
                <div class="flex justify-center gap-2 flex-wrap mb-6 text-xs">
                    <span class="px-3 py-1.5 ${cert.difficultyColor} rounded-full font-medium">${cert.difficulty}</span>
                    <span class="px-3 py-1.5 bg-green-50 text-green-700 rounded-full font-medium">${cert.duration}</span>
                </div>
                <div class="mt-auto space-y-3">
                    <button class="w-full py-3 rounded-xl bg-gradient-to-r from-blue-600 to-indigo-600 text-white font-semibold hover:from-blue-700 hover:to-indigo-700 active:scale-[0.98] transition-all duration-200 shadow-md hover:shadow-lg">
                        Enroll Now
                    </button>
                    <button class="w-full py-3 rounded-xl border-2 border-blue-600 text-blue-600 font-medium hover:bg-blue-50 active:scale-[0.98] transition-all duration-200">
                        View Details
                    </button>
                </div>
            </div>
        `;
        
        carousel.appendChild(card);
        
        // Create progress dot
        const dot = document.createElement('button');
        dot.className = `w-3 h-3 rounded-full transition-all duration-300 ${index === 0 ? 'bg-blue-600 scale-125' : 'bg-gray-300 hover:bg-gray-400'}`;
        dot.dataset.index = index;
        dot.addEventListener('click', () => goToSlide(index));
        progressDots.appendChild(dot);
    });
    
    // Start auto-scroll
    startAutoScroll();
}

// Update card width based on screen size
function updateCardWidth() {
    const screenWidth = window.innerWidth;
    if (screenWidth >= 1280) {
        cardWidth = screenWidth / 4.2; // 4 cards on xl screens
    } else if (screenWidth >= 1024) {
        cardWidth = screenWidth / 3.2; // 3 cards on lg screens
    } else if (screenWidth >= 640) {
        cardWidth = screenWidth / 2.1; // 2 cards on sm screens
    } else {
        cardWidth = screenWidth * 0.85; // 1 card on mobile with padding
    }
}

// Move carousel to specific slide
function goToSlide(index) {
    if (isTransitioning) return;
    
    isTransitioning = true;
    currentIndex = index;
    
    // Update carousel position
    carousel.style.transform = `translateX(-${currentIndex * cardWidth}px)`;
    
    // Update active dot
    document.querySelectorAll('#progressDots button').forEach((dot, i) => {
        dot.className = `w-3 h-3 rounded-full transition-all duration-300 ${i === currentIndex ? 'bg-blue-600 scale-125' : 'bg-gray-300 hover:bg-gray-400'}`;
    });
    
    // Reset auto-scroll timer
    resetAutoScroll();
    
    // Allow next transition after animation completes
    setTimeout(() => {
        isTransitioning = false;
    }, 700);
}

// Next slide function
function nextSlide() {
    const nextIndex = (currentIndex + 1) % totalCards;
    goToSlide(nextIndex);
}

// Previous slide function
function prevSlide() {
    const prevIndex = (currentIndex - 1 + totalCards) % totalCards;
    goToSlide(prevIndex);
}

// Start auto-scroll
function startAutoScroll() {
    autoScrollInterval = setInterval(nextSlide, 5000);
}

// Reset auto-scroll timer
function resetAutoScroll() {
    clearInterval(autoScrollInterval);
    startAutoScroll();
}

// Event Listeners
prevBtn.addEventListener('click', () => {
    prevSlide();
});

nextBtn.addEventListener('click', () => {
    nextSlide();
});

// Pause auto-scroll on hover
carousel.addEventListener('mouseenter', () => {
    clearInterval(autoScrollInterval);
});

carousel.addEventListener('mouseleave', () => {
    startAutoScroll();
});

// Handle window resize
window.addEventListener('resize', () => {
    updateCardWidth();
    
    // Update all card widths
    document.querySelectorAll('#carousel > div').forEach(card => {
        card.style.width = `${cardWidth}px`;
    });
    
    // Move to current index with new width
    carousel.style.transform = `translateX(-${currentIndex * cardWidth}px)`;
});

// Initialize on load
document.addEventListener('DOMContentLoaded', initCarousel);

// Handle touch events for mobile swipe
let touchStartX = 0;
let touchEndX = 0;

carousel.addEventListener('touchstart', (e) => {
    touchStartX = e.changedTouches[0].screenX;
});

carousel.addEventListener('touchend', (e) => {
    touchEndX = e.changedTouches[0].screenX;
    handleSwipe();
});

function handleSwipe() {
    const swipeThreshold = 50;
    
    if (touchEndX < touchStartX - swipeThreshold) {
        // Swipe left - next slide
        nextSlide();
    }
    
    if (touchEndX > touchStartX + swipeThreshold) {
        // Swipe right - previous slide
        prevSlide();
    }
}
</script>

