<script>
/* ================= LOGOS ================= */
const certificationLogos = [
  {
    name: "CEH – EC-Council",
    logo: "/images/dummy-ceh-certificate.svg"
  },
  {
    name: "CompTIA Security+",
    logo: "/images/dummy-security-plus-certificate.svg"
  },
  {
    name: "CompTIA CySA+",
    logo: "/images/dummy-cysa-certificate.svg"
  },
  {
    name: "OSCP – OffSec",
    logo: "/images/dummy-oscp-certificate.svg"
  },
  {
    name: "CISSP – ISC²",
    logo: "/images/dummy-cissp-certificate.svg"
  },
  {
    name: "eJPT – INE",
    logo: "/images/dummy-ejpt-certificate.svg"
  }
];

const marqueeTrack = document.getElementById("marqueeTrack");
let position = 0;

/* Init */
function initMarquee() {
  [...certificationLogos, ...certificationLogos].forEach(c => {
    const div = document.createElement("div");
    div.className = "flex-shrink-0 text-center";
    div.innerHTML = `
      <div class="w-54 h-24 bg-white dark:bg-gray-800 rounded-xl shadow p-4 flex items-center justify-center">
        <img src="${c.logo}" alt="${c.name}" class="max-h-full object-contain">
      </div>
      <p class="text-sm mt-2 text-gray-600 dark:text-gray-400">${c.name}</p>
    `;
    marqueeTrack.appendChild(div);
  });

  setInterval(() => {
    position -= 0.5;
    if (Math.abs(position) > marqueeTrack.scrollWidth / 2) position = 0;
    marqueeTrack.style.transform = `translateX(${position}px)`;
  }, 16);
}

document.addEventListener("DOMContentLoaded", initMarquee);

/* Buttons */
prevCertBtn.onclick = () => position += 200;
nextCertBtn.onclick = () => position -= 200;

/* Modal */
function openContactModal() {
  contactModal.classList.remove("hidden");
  contactModal.classList.add("flex");
  setTimeout(() => {
    contactModal.querySelector("div").classList.remove("scale-95", "opacity-0");
  }, 10);
}

function closeContactModal() {
  const box = contactModal.querySelector("div");
  box.classList.add("scale-95", "opacity-0");
  setTimeout(() => {
    contactModal.classList.add("hidden");
    contactModal.classList.remove("flex");
  }, 200);
}

/* Submit */
contactForm.onsubmit = e => {
  e.preventDefault();
  alert("Thank you! Our cybersecurity expert will contact you.");
  closeContactModal();
  contactForm.reset();
};
</script>



    
