<% layout("/layouts/boilerplate") %>

<div class="max-w-4xl mx-auto p-6 bg-white dark:bg-gray-800 rounded-2xl shadow-lg">
    <h2 class="text-2xl font-bold mb-6">Edit Course: <%= course.title %></h2>

    <form action="/courses/<%= course._id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="space-y-4">

        <!-- Title -->
        <div>
            <label class="block mb-1 font-semibold">Title</label>
            <input type="text" name="title" value="<%= course.title %>" required
                   class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-1 focus:ring-cyan-500"/>
        </div>

        <!-- Short Description -->
        <div>
            <label class="block mb-1 font-semibold">Short Description</label>
            <textarea name="shortDescription" rows="3" required
                      class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-1 focus:ring-cyan-500"><%= course.shortDescription %></textarea>
        </div>

        <!-- Full Description -->
        <div>
            <label class="block mb-1 font-semibold">Description</label>
            <textarea name="discription" rows="5"
                      class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-1 focus:ring-cyan-500"><%= course.discription %></textarea>
        </div>

        <!-- Course Type -->
        <div>
            <label class="block mb-1 font-semibold">Course Type</label>
            <select name="courceType" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-1 focus:ring-cyan-500">
                <% ["CYBERSECURITY","WEB DEV","ADVANCED","MACHINE LEARNING","ETHICAL HACKING","DATA SCIENCE","ARTIFICIAL INTELLIGENCE","other"].forEach(type => { %>
                    <option value="<%= type %>" <%= course.courceType === type ? "selected" : "" %>><%= type %></option>
                <% }) %>
            </select>
        </div>

        <!-- Duration -->
        <div>
            <label class="block mb-1 font-semibold">Duration (Hours)</label>
            <input type="number" name="duration" value="<%= course.duration %>"
                   class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-1 focus:ring-cyan-500"/>
        </div>

        <!-- Price -->
        <div class="grid grid-cols-2 gap-4">
            <div>
                <label class="block mb-1 font-semibold">Price</label>
                <input type="number" name="price" value="<%= course.price %>" required
                       class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-1 focus:ring-cyan-500"/>
            </div>
            <div>
                <label class="block mb-1 font-semibold">Actual Price</label>
                <input type="number" name="actualPrice" value="<%= course.actualPrice %>" required
                       class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-1 focus:ring-cyan-500"/>
            </div>
        </div>

        <!-- Image Upload -->
        <div>
            <label class="block mb-1 font-semibold">Course Image</label>
            <% if(course.image && course.image.url) { %>
                <img src="<%= course.image.url %>" alt="<%= course.title %>" class="w-40 h-24 object-cover mb-2 rounded-lg"/>
            <% } %>
            <input type="file" name="image" class="w-full"/>
        </div>

        <!-- Checkboxes -->
        <div class="flex gap-6 items-center">
            <label class="flex items-center gap-2">
                <input type="checkbox" name="isActive" <%= course.isActive ? "checked" : "" %> class="rounded"/>
                Active
            </label>
            <label class="flex items-center gap-2">
                <input type="checkbox" name="isPopular" <%= course.isPopular ? "checked" : "" %> class="rounded"/>
                Popular
            </label>
            <label class="flex items-center gap-2">
                <input type="checkbox" name="addInHomePage" <%= course.addInHomePage ? "checked" : "" %> class="rounded"/>
                Add to Home Page
            </label>
        </div>

        <button type="submit"
                class="px-6 py-3 bg-cyan-500 text-white font-semibold rounded-lg hover:bg-cyan-600 transition-all">
            Update Course
        </button>
    </form>
</div>
