<% layout("/layouts/boilerplate") %>

<div class="max-w-4xl mx-auto p-6 bg-white dark:bg-gray-800 rounded-2xl shadow-lg dark:shadow-gray-900/30 transition-colors duration-200">
    <h2 class="text-2xl font-bold mb-6 text-gray-800 dark:text-white">Edit Course: <%= course.title %></h2>

    <form action="/courses/<%= course._id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="space-y-4">

        <!-- Title -->
        <div>
            <label class="block mb-1 font-semibold text-gray-700 dark:text-gray-200">Title</label>
            <input type="text" name="title" value="<%= course.title %>" required
                   class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:ring-1 focus:ring-cyan-500 dark:focus:ring-cyan-400 focus:border-transparent"/>
        </div>

        <!-- Short Description -->
        <div>
            <label class="block mb-1 font-semibold text-gray-700 dark:text-gray-200">Short Description</label>
            <textarea name="shortDescription" rows="3" required
                      class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:ring-1 focus:ring-cyan-500 dark:focus:ring-cyan-400 focus:border-transparent"><%= course.shortDescription %></textarea>
        </div>

        <!-- Full Description -->
        <div>
            <label class="block mb-1 font-semibold text-gray-700 dark:text-gray-200">Description</label>
            <textarea name="discription" rows="5"
                      class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:ring-1 focus:ring-cyan-500 dark:focus:ring-cyan-400 focus:border-transparent"><%= course.discription %></textarea>
        </div>

        <!-- Course Type -->
        <div>
            <label class="block mb-1 font-semibold text-gray-700 dark:text-gray-200">Course Type</label>
            <select name="courceType" 
                    class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:ring-1 focus:ring-cyan-500 dark:focus:ring-cyan-400 focus:border-transparent">
                <% ["CYBERSECURITY","WEB DEV","ADVANCED","MACHINE LEARNING","ETHICAL HACKING","DATA SCIENCE","ARTIFICIAL INTELLIGENCE","other"].forEach(type => { %>
                    <option value="<%= type %>" <%= course.courceType === type ? "selected" : "" %> class="bg-white dark:bg-gray-700"><%= type %></option>
                <% }) %>
            </select>
        </div>

        <!-- Duration -->
        <div>
            <label class="block mb-1 font-semibold text-gray-700 dark:text-gray-200">Duration (Hours)</label>
            <input type="number" name="duration" value="<%= course.duration %>"
                   class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:ring-1 focus:ring-cyan-500 dark:focus:ring-cyan-400 focus:border-transparent"/>
        </div>

        <!-- Price -->
        <div class="grid grid-cols-2 gap-4">
            <div>
                <label class="block mb-1 font-semibold text-gray-700 dark:text-gray-200">Price</label>
                <input type="number" name="price" value="<%= course.price %>" required
                       class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:ring-1 focus:ring-cyan-500 dark:focus:ring-cyan-400 focus:border-transparent"/>
            </div>
            <div>
                <label class="block mb-1 font-semibold text-gray-700 dark:text-gray-200">Actual Price</label>
                <input type="number" name="actualPrice" value="<%= course.actualPrice %>" required
                       class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:ring-1 focus:ring-cyan-500 dark:focus:ring-cyan-400 focus:border-transparent"/>
            </div>
        </div>

        <!-- Image Upload -->
        <div>
            <label class="block mb-1 font-semibold text-gray-700 dark:text-gray-200">Course Image</label>
            <% if(course.image && course.image.url) { %>
                <div class="mb-2">
                    <img src="<%= course.image.url %>" alt="<%= course.title %>" 
                         class="w-40 h-24 object-cover rounded-lg border border-gray-200 dark:border-gray-700"/>
                </div>
            <% } %>
            <input type="file" name="image" 
                   class="w-full text-gray-700 dark:text-gray-300 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-cyan-50 dark:file:bg-cyan-900/30 file:text-cyan-700 dark:file:text-cyan-400 hover:file:bg-cyan-100 dark:hover:file:bg-cyan-900/50 transition-colors"/>
        </div>

        <!-- Checkboxes -->
        <div class="flex flex-wrap gap-6 items-center">
            <label class="flex items-center gap-2 text-gray-700 dark:text-gray-200 cursor-pointer">
                <input type="checkbox" name="isActive" <%= course.isActive ? "checked" : "" %> 
                       class="rounded border-gray-300 dark:border-gray-600 text-cyan-600 dark:text-cyan-500 focus:ring-cyan-500 dark:focus:ring-cyan-400 bg-white dark:bg-gray-700"/>
                <span>Active</span>
            </label>
            <label class="flex items-center gap-2 text-gray-700 dark:text-gray-200 cursor-pointer">
                <input type="checkbox" name="isPopular" <%= course.isPopular ? "checked" : "" %> 
                       class="rounded border-gray-300 dark:border-gray-600 text-cyan-600 dark:text-cyan-500 focus:ring-cyan-500 dark:focus:ring-cyan-400 bg-white dark:bg-gray-700"/>
                <span>Popular</span>
            </label>
            <label class="flex items-center gap-2 text-gray-700 dark:text-gray-200 cursor-pointer">
                <input type="checkbox" name="addInHomePage" <%= course.addInHomePage ? "checked" : "" %> 
                       class="rounded border-gray-300 dark:border-gray-600 text-cyan-600 dark:text-cyan-500 focus:ring-cyan-500 dark:focus:ring-cyan-400 bg-white dark:bg-gray-700"/>
                <span>Add to Home Page</span>
            </label>
        </div>

        <button type="submit"
                class="px-6 py-3 bg-cyan-500 dark:bg-cyan-600 text-white font-semibold rounded-lg hover:bg-cyan-600 dark:hover:bg-cyan-700 transition-all">
            Update Course
        </button>
    </form>
</div>